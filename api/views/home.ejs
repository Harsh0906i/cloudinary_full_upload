<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            padding: 0;
            margin: 0;
        }

        .body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .input {
            padding: 10px;
            margin: 10px 0;
        }

        .form {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            border: 1px solid black;
            margin: 20px;
        }

        .posts-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .post-list {
            padding: 20px;
        }

        .post-item {
            border: 0.5px solid black;
            padding: 10px;
            list-style: none;
            margin: 15px 0;
        }

        .post-header {
            padding-bottom: 10px;
            font-weight: bold;
        }

        .post-content {
            padding-bottom: 10px;
        }

        .comment-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 10px;
        }

        .comment {
            margin: 5px 0;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .div {
            border-bottom: 1px solid black;
            padding-bottom: 10px;
        }

        .c {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px;
        }

        .forms {
            display: flex;
            justify-content: space-around;

        }
    </style>
</head>

<body>
    <div class="body">
        <h1>Posts</h1>
        <form class="form" action="/api/post/post" method="post" enctype="multipart/form-data">
            <input class="input" type="file" name="image" accept="image/*">
            <textarea class="input" name="post" placeholder="Write something..."></textarea>
            <button type="submit">Post</button>
        </form>
        <div class="posts-container">
            <h2>All posts:</h2>
            <ul class="post-list">
                <% posts?.forEach(post=> { %>
                    <div class="div">
                        <li class="post-item">
                            <div class="post-header">
                                <%= post.username %>
                            </div>
                            <div class="post-content">
                                <%= post.post %>
                            </div>

                            <% if (post.imgUrl) { %>
                                <img src="<%= post.imgUrl %>" alt="Post image" width="200">
                                <% } %>
                                    <div>
                                        <div>
                                            <form action="/api/post/like" method="post">
                                                <input type="hidden" name="like" value="<%= post._id %>">
                                                <button type="submit">Like</button>
                                            </form>
                                        </div>
                                        <div>
                                            <%= post.like.length %> Likes
                                        </div>
                                    </div>

                                    <form class="comment-form" action="/api/post/comment" method="post">
                                        <input type="text" required name="comment" placeholder="Comment...">
                                        <input type="hidden" name="postid" value="<%= post._id %>">
                                        <button type="submit">Comment</button>
                                    </form>

                                    <div class="comment-container">
                                        <% post.comment.forEach(comment=> { %>
                                            <div class="comment">
                                                <div>
                                                    <strong>
                                                        <%= comment.username %>:
                                                    </strong>
                                                </div>
                                                <%= comment.text %>
                                                    <form action="/api/post/commentdelete" method="post">
                                                        <input type="hidden" name="deletecomment"
                                                            value="<%= comment._id %>">
                                                        <input type="hidden" name="postid" value="<%= post._id %>">
                                                        <button>Delete</button>
                                                    </form>
                                            </div>
                                            <% }) %>
                                    </div>
                        </li>
                        <div class="forms">
                            <form action="/api/post/deletePost" method="post">
                                <input type="hidden" name="postdelete" value="<%= post._id %>">
                                <button>Delete post</button>
                            </form>
                            <form action="/update" method="post">
                                <input type="hidden" name="postupdate" value="<%= post._id %>">
                                <button>Update</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
            </ul>
        </div>
    </div>
    <% if(message){%>
        <div class="c">

            <p class="flash-message">
                <%= message %>
            </p>
        </div>

        <% } %>
</body>
<script>
    const flash = document.querySelector('.flash-message');
    setTimeout(() => {
        if (flash) {
            flash.style.display = 'none';
        }
    }, 2000)
</script>

</html>